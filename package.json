{
  "name": "Gmail",
  "productName": "Gmail",
  "version": "3.4.0",
  "description": "Gmail desktop client for Linux, and Woedows",
  "private": true,
  "repository": "cyfrost/gmail-electron",
  "author": "Cyrus Frost <cyrus.frost@hotmail.com>",
  "license": "MIT",
  "main": "dist-js/app.js",
  "scripts": {
    "start": "tsc && electron ."
  },
  "dependencies": {
    "electron-context-menu": "^0.15.0",
    "electron-debug": "^3.0.1",
    "electron-dl": "^1.14.0",
    "electron-log": "^3.0.8",
    "electron-settings": "^3.2.0",
    "electron-store": "5.0.0",
    "electron-updater": "^4.1.2",
    "electron-util": "^0.12.2",
    "element-ready": "^4.1.1",
    "eslint": "^6.5.1"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.5.0",
    "@types/electron-settings": "^3.1.1",
    "@types/electron-store": "^3.2.0",
    "@types/semver": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "electron": "6.0.12",
    "electron-builder": "^21.2.0",
    "npm-run-all": "^4.1.5",
    "typescript": "3.6.4"
  },
  "build": {
    "artifactName": "${name}-${version}-${os}.${ext}",
    "files": [
      "**/*"
    ],
    "appId": "app.cyfrost.gmail",
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Network;Office"
    },
    "win": {
      "verifyUpdateCodeSignature": false,
      "target": "nsis"
    }
  }
}
