{
  "name": "Gmail",
  "productName": "Gmail",
  "version": "4.0.0",
  "description": "Gmail desktop client for Linux, and Woedows",
  "private": true,
  "repository": "cyfrost/gmail-electron",
  "author": "Cyrus Frost <cyrus.frost@hotmail.com>",
  "license": "MIT",
  "main": "dist-js/app.js",
  "scripts": {
    "start": "tsc && electron .",
    "prettify": "yarn prettier --write 'src/**/*.ts'",
    "pack": "tsc && electron-builder --dir",
    "dist": "tsc && electron-builder --linux --windows --publish never"
  },
  "dependencies": {
    "@types/node": "12",
    "darkreader": "^4.9.2",
    "electron-context-menu": "^2.0.1",
    "electron-debug": "^3.0.1",
    "electron-dl": "^3.0.0",
    "electron-log": "^4.1.2",
    "electron-settings": "^3.2.0",
    "electron-store": "5.1.1",
    "electron-updater": "^4.3.1",
    "electron-util": "^0.14.1",
    "element-ready": "^4.1.1",
    "eslint": "^7.0.0"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.7.0",
    "@types/electron-settings": "^3.1.1",
    "@types/semver": "^7.2.0",
    "electron": "8.3.0",
    "electron-builder": "^22.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "typescript": "3.9.2"
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "semi": true,
    "trailingComma": "none",
    "useTabs": false
  },
  "build": {
    "artifactName": "${name}-${version}-${os}.${ext}",
    "files": [
      "**/*"
    ],
    "appId": "Gmail",
    "linux": {
      "target": [
        "deb",
        "AppImage",
        "pacman",
        "tar.gz"
      ],
      "category": "Network;Office"
    },
    "win": {
      "verifyUpdateCodeSignature": false,
      "target": "nsis"
    }
  }
}
