{
  "name": "Gmail",
  "productName": "Gmail",
  "version": "3.1.0",
  "description": "Gmail desktop client for Linux, Windows",
  "private": true,
  "repository": "cyfrost/gmail-electron",
  "author": "Tim Cheung <tim@cheung.io>",
  "license": "MIT",
  "main": "dist-js/app.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "prettier": "prettier --write",
    "prettify": "npm run prettier -- 'src/**/*.ts'",
    "lint": "run-p lint:*",
    "lint:ts": "xo",
    "lint:css": "stylelint 'css/*.css'",
    "type-check": "tsc --noEmit",
    "start": "tsc && electron .",
    "pack": "tsc && electron-builder --dir",
    "dist": "tsc && electron-builder --linux --windows --publish never"
  },
  "dependencies": {
    "electron-context-menu": "^0.13.0",
    "electron-debug": "^3.0.1",
    "electron-dl": "^1.14.0",
    "electron-log": "^3.0.6",
    "electron-settings": "^3.2.0",
    "electron-store": "4.0.0",
    "electron-updater": "^4.1.2",
    "electron-util": "^0.12.1",
    "element-ready": "^4.1.0",
    "eslint": "^6.1.0"
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.4.0",
    "@types/electron-settings": "^3.1.1",
    "@types/electron-store": "^3.2.0",
    "@types/semver": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "electron": "5.0.8",
    "electron-builder": "^21.1.5",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-xo-typescript": "^0.15.0",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-xo": "^0.15.0",
    "typescript": "3.5.3",
    "xo": "^0.24.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "xo --fix",
      "git add"
    ],
    "*.css": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "useTabs": false,
    "semi": false,
    "singleQuote": true
  },
  "xo": {
    "extends": [
      "xo-typescript",
      "prettier/@typescript-eslint"
    ],
    "extensions": [
      "ts"
    ],
    "envs": [
      "node",
      "browser"
    ],
    "prettier": true
  },
  "stylelint": {
    "extends": "stylelint-config-xo",
    "rules": {
      "declaration-no-important": null,
      "selector-class-pattern": null,
      "indentation": 2,
      "property-no-vendor-prefix": null
    }
  },
  "build": {
    "artifactName": "${name}-${version}-${os}.${ext}",
    "files": [
      "**/*"
    ],
    "appId": "io.cheung.gmail",
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage",
        "pacman"
      ],
      "category": "Network;Office"
    },
    "win": {
      "verifyUpdateCodeSignature": false,
      "target": "nsis"
    }
  }
}
